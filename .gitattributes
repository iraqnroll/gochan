# Font Awesome - exclude all files from language stats
static/fontawesome/** linguist-vendored
static/fontawesome/**/* linguist-vendored

# Mark Font Awesome JS/CSS as generated (stronger exclusion)
static/fontawesome/js/*.js linguist-generated
static/fontawesome/js/*.min.js linguist-generated
static/fontawesome/css/*.css linguist-generated
static/fontawesome/css/*.min.css linguist-generated

# Templ generated files
views/*.templ linguist-vendored
views/*.go linguist-generated

# Exclude all third-party JS/CSS
static/js/vendor/** linguist-vendored
static/css/vendor/** linguist-vendored
*.min.js linguist-generated
*.min.css linguist-generated

# Mark Go as the primary detectable language
*.go linguist-detectable=true
